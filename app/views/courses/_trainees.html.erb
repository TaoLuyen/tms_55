<div id="trainees" class="tab-pane fade">
  <table class="table">
    <thead>
      <th><%= t "index" %></th>
      <th><%= t "name" %></th>
      <th><%= t "email" %></th>
    </thead>
    <tbody>
      <% @user_courses.each_with_index do |user_course, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= user_course.user.name %></td>
          <td><%= user_course.user.email %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
